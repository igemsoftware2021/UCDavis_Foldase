# Need to have an interface that takes two inputs
# 1.) IRE
# 2.) 5'UTR
# Takes the inputs then runs them into the ssr script and gives output.
# Project output
# Don't got to be fancy just work
from tkinter import *

IRE = ""
FPRIME = ""

#Test to see if button function works
def button_fold():
    IRE = IR.get()
    FPRIME = UTR.get()
    Output = Label(root, text=IRE + FPRIME)
    Output.grid(row=5, column=0)


# Creating root widget needs to be done every time you're creating GUI
root = Tk()

root.title("Project Cargo")
Title = Label(root, text="RNA Fold",)
Title.grid(row=0, column=0, columnspan=100)


# Creates IRE and UTR input widgets
IR = Entry(root, width=70, borderwidth=10)
IR.insert(0, "Type IRE Sequence ")
IR.grid(row=1, column=0, columnspan=100)

UTR = Entry(root, width=70, borderwidth=10)
UTR.insert(0, "Type 5'UTR Sequence ")
UTR.grid(row=2, column=0, columnspan=100)

# Button will run the RNA function (Currently just inserts text to make sure it works)
fold_button = Button(root, text="Click to Fold", command=button_fold)
fold_button.grid(row=3, column=0, columnspan=100)

output_txt = Label(root, text="Output Sequence, Secondary Structure and MFE: ")
output_txt.grid(row=4, column=0)


# Create event loop (keeps program running)
root.mainloop()
